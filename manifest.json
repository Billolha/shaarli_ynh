{
  "name": "Shaarli",
  "id": "shaarli",
  "packaging_format": 1,
  "requirements": {
   "yunohost": ">= 2.7.2"
  },
  "description": {
    "en": "The personal, minimalist, super-fast, no-database delicious clone",
    "fr": "Clone de delicious, rapide, simple et sans base de donn√©es."
  },
  "maintainer": {
          "name": "Lapineige et rafi59",
          "email": "rafi59_dev@srvmaison.fr.nf",
          "url": ""
  },
  "url": "https://github.com/shaarli/Shaarli",
  "license": "free",
  "version": "0.9.7",
  "multi_instance": "true",
  "services": [
        "nginx",
        "php5-fpm"
    ],
  "arguments": {
    "install" : [
    {
      "name": "domain",
      "type": "domain",
      "ask": {
        "en": "Choose a domain for your Shaarli",
        "fr": "Choisissez un domaine pour votre Shaarli"
      },
      "example": "domain.org"
    },
    {
      "name": "path",
      "type": "path",
      "ask": {
        "en": "Choose a path for your Shaarli",
        "fr": "Choisissez un chemin pour votre Shaarli"
      },
      "example": "/shaarli",
      "default": "/shaarli"
    },
    {
      "name": "is_public",
      "type": "boolean",
      "ask": {
        "en": "Is it a public Shaarli site ?",
        "fr": "Est-ce un site Shaarli public ?"
      },
      "default": false
    }
    ]
  }
}
